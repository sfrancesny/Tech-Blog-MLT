<!-- views/login.handlebars -->

<section class="login-section">
  <div class="container">
    <div class="login-container">
      <header class="login-header">
        <h1>Minorities Love Tech</h1>
      </header>
      
      <div class="login-form-container">
        <h2 class="form-title">User Login</h2>
        <form id="login-form">
          <div class="field">
            <label for="username-login" class="label">Username:</label>
            <div class="control">
              <input
                type="text"
                id="username-login"
                name="username"
                required
                class="input"
                placeholder="Username"
              />
            </div>
          </div>
          
          <div class="field">
            <label for="password-login" class="label">Password:</label>
            <div class="control">
              <input
                type="password"
                id="password-login"
                name="password"
                required
                aria-label="Enter your password"
                class="input"
                placeholder="Password"
              />
            </div>
          </div>
          
          <div class="field">
            <div class="control">
              <button
                type="submit"
                class="button is-primary"
                id="submit-login"
              >
                Log In
              </button>
            </div>
          </div>
          
          <p id="login-error-message" class="error-message"></p>
        </form>
        
        <nav class="login-navigation">
          <p>Not a user? <a href='/signup' id="signup-link">Sign up here</a></p>
          <p>Forgot your password? <a href='/reset-password' id="reset-password-link">Reset it here</a></p>
        </nav>
      </div>
    </div>
  </div>
</section>

<script src='/js/login.js'></script>
