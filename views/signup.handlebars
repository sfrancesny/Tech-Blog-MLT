<!-- views/signup.handlebars -->

<section class="signup-section">
  <div class="container">
    <header class="signup-header">
      <h1>Sign up!</h1>
    </header>

    <!-- Add a new user -->
    <form id="addUserForm" class="user-form">
      <div class="field">
        <label for="username" class="label">Username:</label>
        <div class="control">
          <input type="text" class="input" id="username" name="username" placeholder="Username" required>
        </div>
      </div>

      <div class="field">
        <label for="email" class="label">Email:</label>
        <div class="control">
          <input type="email" class="input" id="email" name="email" placeholder="Email" required>
        </div>
      </div>

      <div class="field">
        <label for="password" class="label">Password:</label>
        <div class="control">
          <input type="password" class="input" id="password" name="password" placeholder="Password (At least 6 characters, must contain a number and a letter)" required>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <button type="submit" class="button is-primary">Add User</button>
        </div>
      </div>
    </form>
  </div>
</section>

<script src='/js/signup.js'></script>
